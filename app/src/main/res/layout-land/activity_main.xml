<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="?attr/colorControlHighlight">


    <Button
        android:layout_height="20sp"
        android:text="ALL MEMORIES"
        android:id="@+id/button_viewAll"
        android:layout_width="150sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/button_add"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/editText_Marks"
        android:layout_toRightOf="@+id/button_update"
        android:layout_toEndOf="@+id/button_update" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place        :"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/editText_Marks"
        android:layout_alignBottom="@+id/editText_Marks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText_Marks"
        android:layout_toStartOf="@+id/editText_Marks" />

    <Button
        android:text="NEW MEMORY"
        android:id="@+id/button_add"
        android:layout_width="150sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="70sp"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/editText_Marks"
        android:layout_toLeftOf="@+id/button_delete"
        android:layout_toStartOf="@+id/button_delete" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Duration  :"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/editText_surname"
        android:layout_alignBottom="@+id/editText_surname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText_surname"
        android:layout_toStartOf="@+id/editText_surname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DAY           :"
        android:id="@+id/textView_id"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/editText_id"
        android:layout_alignBottom="@+id/editText_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="50sp"
        android:id="@+id/editText_id"
        android:layout_width="50sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date          : "
        android:id="@+id/textView"
        android:layout_height="20sp"
        android:layout_width="100sp"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:layout_below="@+id/editText_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText_id"
        android:layout_toStartOf="@+id/editText_id" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_surname"
        android:layout_below="@+id/editText_name"
        android:layout_marginTop="11dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editText_Marks"
        android:layout_marginTop="11dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_surname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_surname"
        android:layout_alignStart="@+id/editText_surname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button_delete"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/button_viewAll"
        android:layout_toLeftOf="@+id/button_viewAll"
        android:layout_toStartOf="@+id/button_viewAll" />

    <Button
        android:layout_width="wrap_content"
        android:text="Update"
        android:id="@+id/button_update"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText_Marks" />

</RelativeLayout>