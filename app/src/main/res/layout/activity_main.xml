<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="?attr/colorControlHighlight">


    <Button
        android:layout_height="wrap_content"
        android:text="ALL MEMORIES"
        android:id="@+id/button_viewAll"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/button_add"
        android:layout_alignTop="@+id/button_add"
        android:contentDescription="OLD MEMORIES" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Delete"
        android:id="@+id/button_delete"
        android:visibility="invisible"
        android:layout_above="@+id/button_viewAll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DAY           :"
        android:id="@+id/textView_id"
        android:textSize="18sp"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_ID"
        android:layout_alignBaseline="@+id/textView_id"
        android:layout_alignBottom="@+id/textView_id"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date          : "
        android:id="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/editText_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_ID"
        android:layout_alignStart="@+id/editText_ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Duration   :"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editText_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_surname"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Marks"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_surname"
        android:layout_alignStart="@+id/editText_surname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place        :"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_below="@+id/editText_surname"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/button_update"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="NEW MEMORY"
        android:fontFamily="sans-serif-medium"
        android:text="NEW MEMORY" />

    <Button
        android:layout_width="wrap_content"
        android:text="Update"
        android:id="@+id/button_update"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>